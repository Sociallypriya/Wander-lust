  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/rating.css"/>

  <style>
    body {
      font-family: "Plus Jakarta Sans", sans-serif;
      background-color: #ffffff;
      color: #222;
    }

    .container {
      max-width: 1200px;
    }

    h1, h2, h3, h4, h5 {
      font-weight: 600;
    }

    .btn-dark {
      background-color: #222;
      border: none;
      border-radius: 8px;
    }

    .btn-dark:hover {
      background-color: #000;
    }
  </style>
