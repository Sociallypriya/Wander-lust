<body>

  <!-- Navbar -->
  <%- include("../includes/navbar.ejs") %>

  <!-- Main Content -->
  <main class="py-4">
    <div class="container">
      <%- include("../includes/flash.ejs") %>
      <%- body %>
    </div>
  </main>

  <!-- Footer -->
  <%- include("../includes/footer.ejs") %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
