<% layout("/layouts/boilerplate") %>

<style>
  .edit-container {
    max-width: 800px;
    margin: 4rem auto;
  }

  .edit-card {
    border: none;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
  }

  .edit-title {
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .current-img {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
    border-radius: 15px;
    margin-top: 0.5rem;
  }

  textarea {
    resize: none;
  }

  .btn-dark {
    padding: 0.6rem 1.5rem;
    border-radius: 8px;
  }

  body {
    background-color: #ffffff;
  }
</style>


<div class="edit-container">
  <div class="card edit-card">

    <h3 class="edit-title">Edit your Listing</h3>

    <form 
      method="POST" 
      action="/listings/<%= listing._id %>?_method=PUT" 
      novalidate 
      class="needs-validation" 
      enctype="multipart/form-data"
    >

      <!-- Title -->
      <div class="mb-4">
        <label class="form-label">Title</label>
        <input 
          name="listing[title]" 
          value="<%= listing.title %>" 
          type="text" 
          class="form-control" 
          required
        />
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label class="form-label">Description</label>
        <textarea 
          name="listing[description]" 
          class="form-control" 
          rows="4"
          required><%= listing.description %></textarea>
      </div>

      <!-- Current Image -->
      <div class="mb-4">
        <label class="form-label">Current Image</label>
        <img src="<%= originalImageUrl %>" class="current-img">
      </div>

      <!-- Upload New Image -->
      <div class="mb-4">
        <label class="form-label">Upload New Image</label>
        <input name="listing[image]" type="file" class="form-control"/>
      </div>

      <!-- Price + Country -->
      <div class="row">
        <div class="col-md-4 mb-4">
          <label class="form-label">Price</label>
          <input 
            name="listing[price]" 
            value="<%= listing.price %>" 
            type="number" 
            class="form-control" 
            required
          />
        </div>

        <div class="col-md-8 mb-4">
          <label class="form-label">Country</label>
          <input 
            name="listing[country]" 
            value="<%= listing.country %>" 
            type="text" 
            class="form-control" 
            required
          />
        </div>
      </div>

      <!-- Location -->
      <div class="mb-4">
        <label class="form-label">Location</label>
        <input 
          name="listing[location]" 
          value="<%= listing.location %>" 
          type="text" 
          class="form-control" 
          required
        />
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark">
        Save Changes
      </button>

    </form>
  </div>
</div>
