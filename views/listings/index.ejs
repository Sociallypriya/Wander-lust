<% layout("/layouts/boilerplate") %>

<style>
  /* ---------------- FILTER SECTION ---------------- */

  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    transition: all 0.2s ease;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.05);
  }

  .filter i {
    font-size: 1.2rem;
  }

  .filter p {
    font-size: 0.75rem;
    margin-top: 0.3rem;
  }

  /* Push tax toggle to right */
  .tax-toggle {
    margin-left: auto;
    border: 1px solid #ddd;
    border-radius: 2rem;
    padding: 0.6rem 1rem;
    display: flex;
    align-items: center;
    background: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }

  .tax-toggle label {
    font-size: 0.85rem;
    margin-left: 0.5rem;
  }

  /* Hide tax info initially */
  .tax-info {
    display: none;
    color: #777;
    font-size: 0.85rem;
  }

  /* ---------------- CARD SECTION ---------------- */

  .listing-card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }

  .card-img-top {
    height: 18rem;
    object-fit: cover;
    border-radius: 15px;
  }

  .listing-link {
    text-decoration: none;
    color: black;
  }

  .card-text {
    font-size: 0.95rem;
  }
</style>


<!-- FILTER SECTION -->
<div id="filters">
  <div class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Room</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-mountain-sun"></i>
    <p>Mountains</p>
  </div>

  <div class="filter">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-water-ladder"></i>
    <p>Amazing Pools</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </div>

  <!-- TAX TOGGLE (Now aligned right properly) -->
  <div class="tax-toggle">
    <div class="form-check form-switch m-0">
      <input class="form-check-input" type="checkbox" id="taxSwitch">
      <label class="form-check-label" for="taxSwitch">
        Display total after taxes
      </label>
    </div>
  </div>
</div>


<!-- LISTING CARDS -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4 g-4">
  <% for(let listing of allListings) { %>

    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="listing_image"
          >
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
              <span class="tax-info"> +18% GST included</span>
            </p>
          </div>
        </div>
      </a>
    </div>

  <% } %>
</div>


<script>
  const taxSwitch = document.getElementById("taxSwitch");

  taxSwitch.addEventListener("change", () => {
    const taxInfo = document.querySelectorAll(".tax-info");

    taxInfo.forEach(info => {
      if (taxSwitch.checked) {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    });
  });
</script>
