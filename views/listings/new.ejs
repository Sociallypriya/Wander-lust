<% layout("/layouts/boilerplate") %>

<style>
  .create-container {
    max-width: 800px;
    margin: 4rem auto;
  }

  .create-card {
    border: none;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
  }

  .create-title {
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  textarea {
    resize: none;
  }

  .btn-dark {
    padding: 0.6rem 1.5rem;
    border-radius: 8px;
  }

  body {
    background-color: #ffffff;
  }
</style>


<div class="create-container">
  <div class="card create-card">

    <h3 class="create-title">Create a New Listing</h3>

    <form action="/listings"
          method="POST"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-4">
        <label class="form-label">Title</label>
        <input name="listing[title]"
               placeholder="Enter listing title"
               type="text"
               class="form-control"
               required />
               <div class="valid-feedback">Title looks good!</div>
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label class="form-label">Description</label>
        <textarea name="listing[description]"
                  class="form-control"
                  rows="4"
                  placeholder="Describe the place..."
                  required></textarea>
                  <div class="invalid-feedback">Description should be short</div>
      </div>

      <!-- Image Upload -->
      <div class="mb-4">
        <label class="form-label">Upload Image</label>
        <input name="listing[image]"
               type="file"
               class="form-control"
               required />
      </div>

      <!-- Price & Country -->
      <div class="row">
        <div class="col-md-4 mb-4">
          <label class="form-label">Price</label>
          <input name="listing[price]"
                 placeholder="â‚¹"
                 type="number"
                 class="form-control"
                 required />
                 <div class="invalid-feedback">Enter valid price</div>
        </div>

        <div class="col-md-8 mb-4">
          <label class="form-label">Country</label>
          <input name="listing[country]"
                 placeholder="Enter country"
                 type="text"
                 class="form-control"
                 required />
                 <div class="invalid-feedback">Enter valid country</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-4">
        <label class="form-label">Location</label>
        <input name="listing[location]"
               placeholder="City or area"
               type="text"
               class="form-control"
               required />
               <div class="invalid-feedback">Enter valid location</div>
      </div>

      <!-- Submit -->
      <button class="btn btn-dark">
        Add Listing
      </button>

    </form>
  </div>
</div>
