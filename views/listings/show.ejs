<% layout("/layouts/boilerplate") -%>

<style>
  .show-container {
    max-width: 1000px;
    margin: 3rem auto;
  }

  .show-img {
    height: 450px;
    object-fit: cover;
    border-radius: 20px;
  }

  .listing-title {
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .price {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .info-text {
    color: #666;
  }

  .btns {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
  }

  .review-card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
  }

  .review-section {
    margin-top: 3rem;
  }

  textarea {
    resize: none;
  }
</style>


<div class="show-container">

  <!-- TITLE -->
  <h2 class="listing-title"><%= listing.title %></h2>

  <!-- IMAGE -->
  <img 
    src="<%= listing.image.url %>" 
    class="w-100 show-img mb-4" 
    alt="listing_image"
  />

  <!-- DETAILS -->
  <div class="mb-4">
    <p class="info-text">Owned by <b><%= listing.owner.username %></b></p>
    <p><%= listing.description %></p>
    <p class="price">â‚¹<%= listing.price.toLocaleString("en-IN") %> / night</p>
    <p class="info-text"><%= listing.location %>, <%= listing.country %></p>
  </div>

  <!-- EDIT / DELETE -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" 
         class="btn btn-outline-dark">
         Edit
      </a>

      <form method="POST" 
            action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">
          Delete
        </button>
      </form>
    </div>
  <% } %>

  <!-- REVIEW SECTION -->
  <div class="review-section">
    <hr>

    <% if(currUser) { %>
      <h4 class="mb-3">Leave a Review</h4>

      <form action="/listings/<%= listing._id %>/reviews" 
            method="POST" 
            novalidate 
            class="needs-validation">

        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" 
                    id="comment" 
                    rows="4" 
                    class="form-control" 
                    required></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>

        <button class="btn btn-dark">
          Submit Review
        </button>
      </form>

      <hr>
    <% } %>

    <!-- ALL REVIEWS -->
    <h5 class="mb-3">All Reviews</h5>

    <div class="row g-4">
      <% for(review of listing.reviews){ %>
        <div class="col-md-6">
          <div class="card review-card p-3">
            <h6>@<%= review.author.username %></h6>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <p class="info-text"><%= review.comment %></p>

            <% if(currUser && review.author._id.equals(currUser._id)) { %>
              <form method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-outline-dark">
                  Delete
                </button>
              </form>
            <% } %>

          </div>
        </div>
      <% } %>
    </div>

  </div>

</div>
